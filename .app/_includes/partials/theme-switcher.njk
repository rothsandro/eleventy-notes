<div role="radiogroup" aria-label="Appearance" class="theme-switcher" x-data x-cloak>
  <label class="theme-switcher__label">
    <input
      type="radio"
      name="appearance"
      x-model="$store.appearance.theme"
      value="light"
      class="visually-hidden"
    >
    {{ 'sun' | feather | safe }}
    <span class="visually-hidden">Light</span>
  </label>
  <label class="theme-switcher__label">
    <input
      type="radio"
      name="appearance"
      x-model="$store.appearance.theme"
      value="dark"
      class="visually-hidden"
    >
    {{ 'moon' | feather | safe }}
    <span class="visually-hidden">Dark</span>
  </label>
  <label class="theme-switcher__label">
    <input
      type="radio"
      name="appearance"
      x-model="$store.appearance.theme"
      value="system"
      class="visually-hidden"
    >
    {{ 'monitor' | feather | safe }}
    <span class="visually-hidden">System</span>
</div>
