---
pagination:
  data: collections.tags
  size: 1
  alias: tag
  addAllPagesToCollections: true
layout: "core/base.layout.njk"
eleventyComputed:
  title: "Tag #{{ tag.title }}"
permalink: /tags/{{ tag.title | slugify }}/
panel: false
---

<main class="app-layout__main" id="app-content">
  <div class="page">
    <h1 class="page__title">Tag: {{ tag.title }} <small>({{ collections[tag.title].length }})</small></h1>
    <ul role="list" class="stack">
      {% for post in collections[tag.title] | sortNotesByTitle %}
        <li>
          <a href="{{ post.url }}" class="note-link">
            {{ post.data.title or post.page.fileSlug }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</main>
